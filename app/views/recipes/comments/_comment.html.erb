<li>
  <div class="sm:flex">
    <div class="mb-2 flex-shrink-0 sm:mb-0 sm:mr-4 pt-2">
      <%= render 'shared/avatar', user: comment.user %>
    </div>
    <div class="py-2 rounded grow">
      <div class="flex items-center">
        <p class="text-xs font-medium text-primary-text-color">
          <%= comment.user.full_name %>
        </p>
          <span class="px-4 text-xs italic mr-3">
            <%= time_ago_in_words(comment.created_at) %>
          </span>
      </div>
      <p class="mt-1 text-sm">
        <%= comment.content%>
      </p>
    </div>
  </div>
</li>
