<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <%= f.label :quantity %>
  <%= f.text_field :quantity, required: true %>

  <%= f.label :unit %>
  <%= f.select :unit, RecipeIngredient::UNITS, include_blank: true %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <button type="button" data-action="nested-form#remove">Remove ingredient</button>

  <%= f.hidden_field :_destroy %>
</div>