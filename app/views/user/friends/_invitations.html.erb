<%= turbo_frame_tag "invitations" do %>
	<span class="flex flex-col justify-center items-center border border-gray-300 rounded-md p-4 bg-[#f5f5f5]">
		<h2>Pending Invitations</h2>
		<% if pending_invitations.count > 0 %>
			<ul class="w-full">
					<% pending_invitations.each do |invite| %>
						<span class="flex flex-row items-center justify-around ">
							<p class="py-2 "><%= invite.user.full_name %></p>
							<div class="inline-flex flex-row ">
								<%= button_to "Accept", user_invitation_path(invite.user, response: "accept"), method: :patch, class: "px-2" %>
								<%= button_to "Ignore", user_invitation_path(invite.user, response: "ignore"), method: :patch, class: "px-2" %>
							</div>
						</span>
					<%end%>
			</ul>
		<% else %>
			<div> No pending invitations</div>
		<% end %>
	</span>
<% end %>