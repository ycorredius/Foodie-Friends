<% if user.avatar.attached?  %>
  <%= image_tag avatar_url_for(user), class: "h-10 w-10 rounded-full" %>
<% else %>
   <span class="
      inline-flex
      h-10
      w-10
      items-center
      justify-center
      rounded-full
      bg-brand-accent-color
    ">
    <span class="font-medium leading-none text-brand-primary-color"><%= user.name_initials.upcase%></span>
  </span>
<% end %>

