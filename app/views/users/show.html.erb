<div class="container">
  <div class="flex flex-col gap-10 sm:flex-row justify-center">
    <%= image_tag avatar_url(@user), class: "aspect-[4/5] w-52 flex-none rounded-2xl object-cover" %>
    <div class="max-w-xl flex-auto">
      <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900"><%= @user.full_name %></h3>
      <p class="text-base leading-7 text-gray-600"><%= @user.title %></p>
      <div class="flex flex-col">
        <p class="mt-6 text-base leading-7 text-gray-600"><%= @user.about %></p>
        <% if @user != current_user %>
        <div id="invitation-button">
          <%= render "user/invitations/invitation_button" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <ul class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-4 lg:grid-cols-4 xl:gap-x-6 lg:p-6 sm:p-4 p-2">
    <% @user.recipes.each do |recipe| %>
      <%= render "recipes/recipe_card", recipe: recipe %>
    <% end %>
</div>